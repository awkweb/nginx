server {
    listen      443 default_server ssl;
    server_name _;

    if ($host ~* ^www\.(.*)) {
        set $host_without_www $1;
        rewrite ^(.*) https://$host_without_www$1 permanent;
    }

    location / {
        index index.html;
    }
}

server {
    listen      [::]:80;
	listen      80 default_server;
	server_name _;
	return      301 https://$host$request_uri;
}

server {
  server_name   www.*;
  return        301 https://$1$request_uri;
}
